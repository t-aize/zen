		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@types/node": "^25.3.0",
		"discord-api-types": "^0.38.39",
		"esbuild": "^0.27.3",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
