{
	"name": "zen",
	"private": true,
	"description": "Zen — Simply powerful, purely open-source. The ultimate multipurpose Discord bot.",
	"author": "Taïze",
	"license": "Apache-2.0",
	"packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a",
	"scripts": {
		"dev": "pnpm --parallel -r dev",
		"build": "pnpm -r build",
		"type-check": "pnpm -r type-check",
		"dev:web": "pnpm --filter @zen/web dev",
		"dev:bot": "pnpm --filter @zen/bot dev",
		"db:push": "pnpm --filter @zen/db db:push",
		"db:generate": "pnpm --filter @zen/db db:generate",
		"db:migrate": "pnpm --filter @zen/db db:migrate",
		"db:studio": "pnpm --filter @zen/db db:studio",
		"check": "biome check --write --unsafe .",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	}
}
