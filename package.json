{
	"name": "zen",
	"version": "0.0.1",
	"private": true,
	"description": "Zen — Simply powerful, purely open-source. The ultimate multipurpose Discord bot.",
	"type": "module",
	"author": "Taïze",
	"license": "Apache-2.0",
	"packageManager": "pnpm@10.30.0+sha512.2b5753de015d480eeb88f5b5b61e0051f05b4301808a82ec8b840c9d2adf7748eb352c83f5c1593ca703ff1017295bc3fdd3119abb9686efc96b9fcb18200937",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "esbuild src/index.ts --bundle --minify --outfile=dist/index.js --format=esm --platform=node --target=node24 --packages=external --sourcemap --alias:@=./src",
		"type-check": "tsc --noEmit",
		"start": "node dist/index.js",
		"check": "biome check --write",
		"prepare": "husky",
		"release": "release-it",
		"release:patch": "release-it patch",
		"release:minor": "release-it minor",
		"release:major": "release-it major",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio"
	},
	"dependencies": {
		"@discordjs/voice": "^0.19.0",
		"@paralleldrive/cuid2": "^3.3.0",
		"better-sqlite3": "^12.6.2",
		"discord.js": "^14.25.1",
		"dotenv": "^17.3.1",
		"drizzle-orm": "^0.45.1",
		"pino": "^10.3.1",
		"pino-pretty": "^13.1.3",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.2",
		"@release-it/conventional-changelog": "^10.0.5",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^25.3.0",
		"discord-api-types": "^0.38.39",
		"drizzle-kit": "^0.31.9",
		"esbuild": "^0.27.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"release-it": "^19.2.4",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"optionalDependencies": {
		"bufferutil": "^4.1.0",
		"zlib-sync": "^0.1.10"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx,svelte}": [
			"biome check --write --no-errors-on-unmatched"
		]
	}
}
