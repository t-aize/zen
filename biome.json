{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!**/dist", "!**/docs", "!**/node_modules", "!**/*.d.ts"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 120,
		"lineEnding": "lf"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noExcessiveCognitiveComplexity": {
					"level": "warn",
					"options": {
						"maxAllowedComplexity": 25
					}
				},
				"noVoid": "off",
				"useLiteralKeys": "off"
			},
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"noUnusedFunctionParameters": "warn",
				"noUnusedPrivateClassMembers": "error"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useBlockStatements": "off",
				"noParameterAssign": "off",
				"useDefaultParameterLast": "error",
				"useExportType": "error",
				"useImportType": "error",
				"useNamingConvention": {
					"level": "warn",
					"options": {
						"strictCase": false,
						"conventions": [
							{
								"selector": {
									"kind": "typeAlias"
								},
								"formats": ["PascalCase"]
							},
							{
								"selector": {
									"kind": "interface"
								},
								"formats": ["PascalCase"]
							},
							{
								"selector": {
									"kind": "class"
								},
								"formats": ["PascalCase"]
							},
							{
								"selector": {
									"kind": "enum"
								},
								"formats": ["PascalCase"]
							},
							{
								"selector": {
									"kind": "enumMember"
								},
								"formats": ["PascalCase", "CONSTANT_CASE"]
							},
							{
								"selector": {
									"kind": "classProperty",
									"modifiers": ["private"]
								},
								"formats": ["camelCase"]
							},
							{
								"selector": {
									"kind": "typeProperty"
								},
								"formats": ["camelCase", "snake_case"]
							},
							{
								"selector": {
									"kind": "objectLiteralProperty"
								},
								"formats": ["camelCase", "snake_case", "PascalCase"]
							}
						]
					}
				},
				"useConsistentArrayType": {
					"level": "error",
					"options": {
						"syntax": "shorthand"
					}
				},
				"useForOf": "error",
				"useTemplate": "error",
				"useArrayLiterals": "error"
			},
			"suspicious": {
				"noConsole": "off",
				"noExplicitAny": "warn",
				"noConfusingVoidType": "off",
				"noEmptyBlockStatements": "warn"
			},
			"performance": {
				"noAccumulatingSpread": "error",
				"noBarrelFile": "off",
				"noReExportAll": "off"
			},
			"nursery": {},
			"security": {
				"noSecrets": "info"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"arrowParentheses": "always",
			"trailingCommas": "all",
			"semicolons": "always",
			"bracketSpacing": true,
			"bracketSameLine": false
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
