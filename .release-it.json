{
	"$schema": "https://unpkg.com/release-it/schema/release-it.json",
	"git": {
		"commitMessage": "chore(release): v${version}",
		"tagName": "v${version}",
		"tagAnnotation": "Release v${version}",
		"requireBranch": "main",
		"requireCleanWorkingDir": true,
		"requireCommits": true,
		"requireCommitsUpstream": true
	},
	"github": {
		"release": true,
		"releaseName": "v${version}",
		"autoGenerate": false
	},
	"npm": {
		"publish": false
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": {
				"name": "conventionalcommits",
				"types": [
					{ "type": "feat", "section": "âœ¨ Features" },
					{ "type": "fix", "section": "ğŸ› Bug Fixes" },
					{ "type": "perf", "section": "âš¡ Performance" },
					{ "type": "refactor", "section": "â™»ï¸ Refactoring" },
					{ "type": "docs", "section": "ğŸ“ Documentation" },
					{ "type": "chore", "section": "ğŸ”§ Chores" },
					{ "type": "ci", "section": "ğŸ‘· CI/CD" },
					{ "type": "test", "section": "âœ… Tests" }
				]
			},
			"infile": "CHANGELOG.md",
			"header": "# Changelog\n\nAll notable changes to **Zen** will be documented in this file.\n"
		}
	}
}
